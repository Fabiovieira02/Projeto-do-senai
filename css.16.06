}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-bar {
  margin: 10px;
}

.image {
  width: 200px; /* Defina a largura desejada */
  height: auto; /* Mantém a proporção da imagem */
}

img {
  width: 20%;
}

.carousel img {
  height: 400px;
  max-width: fit-content;
  margin: auto;
}


