      .cart {
        position: relative;
        width: 40px;
        height: 40px;
        background-color: #f8f8f8;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
      }
      
      .cart-icon {
        width: 24px;
        height: 24px;
        background-image: url('carrinho.png'); /* Substitua pela imagem do seu √≠cone de carrinho */
        background-size: cover;
      }
      
      .cart-items {
        position: absolute;
        top: -8px;
        right: -8px;
        width: 20px;
        height: 20px;
        background-color: #ff5757;
        border-radius: 50%;
        color: #fff;
        font-size: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: cart-bounce 0.5s infinite alternate;
      }
      
      @keyframes cart-bounce {
        0% {
          transform: scale(1);
        }
        100% {
          transform: scale(1.1);
        }
      }
  
  
  
